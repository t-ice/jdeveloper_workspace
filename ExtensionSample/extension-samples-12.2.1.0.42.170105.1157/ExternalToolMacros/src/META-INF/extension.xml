<extension id="oracle.ide.extsamples.externaltoolmacros" version="11.1.1"
           esdk-version="1.0" xmlns="http://jcp.org/jsr/198/extension-manifest">
  <name>ESDK Sample - External Tool Macros</name>
  <owner>Oracle</owner>

  <feature-member id="esdk-samples" xmlns="http://xmlns.oracle.com/ide/extension"/>

  <trigger-hooks xmlns="http://xmlns.oracle.com/ide/extension">
   <triggers>
     <externaltools xmlns="http://xmlns.oracle.com/ide/extension">
        <macro macro="sample.user.name"
               name="User name (ESDK Sample)"
               description="The current user's username (provided by the ExternalToolsMacro sample)"
               implClass="oracle.ide.extsamples.externaltoolmacros.UserNameMacro" />
     </externaltools>
   </triggers>
  </trigger-hooks>

</extension>
